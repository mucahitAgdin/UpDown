{
  "name": "wake-on-lan",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "watch": "nodemon --watch src --exec electron ."
  },
  "keywords": [
    "wake-on-lan",
    "remote-shutdown",
    "network-manager"
  ],
  "author": "Your Name",
  "license": "ISC",
  "description": "Wake-on-LAN and Remote Shutdown Management Tool",
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "better-sqlite3": "^8.6.0",
    "chalk": "^5.3.0",
    "ping": "^0.4.4",
    "sqlite3": "^5.1.6",
    "wake_on_lan": "^1.0.0",
    "wol": "^1.0.7"
  },
  "build": {
    "appId": "com.yourcompany.wakeonlan",
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "deb",
      "category": "Network"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    }
  }
}